#!/bin/bash
print_usage() {
  echo "
    ${0##*/} [-h|--help] [--doc] [--src] [--versions] [--man]
                                ** OR **
    ${0##*/} -cdf fichier_netcdf -rpn fichier_rpn [-dir] -attr [fichier_attributs_netcdf] [-autres_arguments]
       "
}
Location=$(true_path $0)
Location=${Location%/bin/*}
Location=${DIAGNOSTIQUE:-${Location}}
case ${1:-*} in
--help | -h )
  print_usage
  exit 0
  ;;
--man )
  cd ${Location}/man/pdoc
  [[ -f cdf2ccc.txt ]] && ${PAGER:-less} cdf2ccc.txt
  exit $?
  ;;
--doc )
  echo ${Location}/man/pdoc
  exit 0
  ;;
--versions )
  cd ${Location}/bin/${BASE_ARCH}/
  ls ${0##*/}_*.*.*
  exit 0
  ;;
--src )
  echo ${Location}/src
  exit 0
  ;;
* )
  CDF2RPN=${CDF2RPN:-${Location}/bin/${BASE_ARCH}/stable.cdf2rpn}
  if [ `echo ${CDF2RPN} | cut -c1` != "/" ]; then CDF2RPN=${Location}/bin/${BASE_ARCH}/${CDF2RPN} ; fi
  if [[ -x ${CDF2RPN} ]] ; then
    if [ ! "${launched_by_cdf2rpn_script}" ]; then
      export launched_by_cdf2rpn_script=YES
      ${CDF2RPN} "$@"
      exit $?
    else
      echo "
       Recursion detected. PLS re-define your \${CDF2RPN} variable...
       Current value is ${CDF2RPN}
       "
      exit 99
    fi
  else
    ${Location}/bin/${BASE_ARCH}/stable.cdf2rpn "$@"
    exit $?
  fi
  ;;
esac
exit
